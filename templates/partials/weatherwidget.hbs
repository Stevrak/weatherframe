<div class="weather_animated">
    <input type="hidden" name="client_ip" value="174.95.199.49">
    <div class="location">
      <span data-api="location">{{geo.location}}</span>
    </div>

      <div class="weather_top_box">
        <div class="main_left">
          <i data-api="current_icon" class="{{weather.desc}}"></i>
          <span data-api="current_main_descr">{{weather.desc}}</span>
        </div>
        <div class="main_middle">
          <span>Temp</span>
          <span data-api="current_temperature" class="temperature big">{{weather.temp}}°c</span>
        </div>
        <div class="main_right">
          <span data-api="current_wind_speed" class="wind">Wind: {{weather.wind}} kmph</span>
          <span data-api="current_precip" class="precip">Precip: {{weather.rain}} mm</span>
          <span data-api="current_pressure" class="pressure">Pressure: {{weather.pressure}} mb</span>
        </div>
      </div>
        <div data-api="forecast_week" class="week">
          <div class="day">
            <span class="name">TUE</span><i class="full_clouds"></i>
            <span class="temperature">15 °c</span>
          </div>

          <div class="day">
            <span class="name">WED</span><i class="partly_cloudy"></i>
            <span class="temperature">7 °c</span>
          </div>

<div class="day">
<span class="name">THU</span><i class="partly_cloudy"></i>
<span class="temperature">6 °c</span>
</div>
<div class="day">
<span class="name">FRI</span><i class="cloud_slight_rain"></i>
<span class="temperature">3 °c</span>
</div>
<div class="day">
<span class="name">SAT</span><i class="cloud_slight_rain"></i>
<span class="temperature">9 °c</span>
</div>
        </div>

      </div>
